<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:gravity="center">

    <ProgressBar
        android:layout_width="@dimen/button_green_circle_size_small"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:layout_marginStart="@dimen/margin_smed"
        android:id="@+id/waiting_load_more_tv_waiting"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_green_circle_size_small"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Load More ..." />

</LinearLayout>